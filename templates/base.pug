!!! 5 doctype html
html(lang="ru")
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(type='text/css' rel='stylesheet' href="{{ url_for('static', filename='css/style.css')}}")
    block title
      if title
        title Про Flask - {{ title }}
      else
        title Про Flask
  body 
    block content
      block mainmenu
        ul.mainmenu
          for m in menu
            li
              //- 1 вариант  без БД {{m.name}}
              a(href="{{m.url}}"){{m.title}}
      .clear
      .content
        if title
          h1 {{ title }}
        else
          h1 Про Flask
